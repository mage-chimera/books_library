
<div class="row justify-content-center">
    <% @books.each do |book| %>
        <div class="col-md-4">
            <div class="card mb50">
                <div class="card-body">
                    <div class='image-wrapper'><img class='book-image' src="/images/4693.png"></div>
                    <h3 class='h3 book-title'><%= book.title %></h3>
                    <h3 class='h3 book-category'><%= book.category %></h3>
                    <a href="" class='btn btn-secondary detail-btn'>レビューを見る</a>
                </div>
            </div>
        </div>
    <% end %>
</div>
