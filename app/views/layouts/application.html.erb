<!DOCTYPE html>
<html>
  <head>
    <title>BooksLibrary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <%= link_to "", books_path, class: "navbar__brand navbar__mainLogo" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        </button>
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav ml-md-auto align-items-center">
            <li>
              <%= link_to "新規作成", new_book_path, class: "btn btn-primary" %>
            </li>
            <li>
              <%= link_to "サインアップ", new_user_registration_path, class: "nav-link commonNavIcon profile-icon" %>
            </li>
            <li>
              <%= link_to "コメント投稿", post_new_path, class: "btn btn-primary" %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
