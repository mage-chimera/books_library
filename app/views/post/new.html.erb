<div class="listnewPage">
  <div class="container">
    <%= form_with model: @post, url: { action: :create }, class: "new_list", local: true do |f| %>
      <% if @post.errors.any? %>
        <p class="text-danger">コメントを入力してください</p>
      <% end %>
      <%= f.label :comment %>
      <%= f.text_field :comment, autofocus: true, class: "form-control" %>
      <div class="text-center"><%= f.submit "作成", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>